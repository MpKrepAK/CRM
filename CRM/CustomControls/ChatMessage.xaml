<UserControl x:Class="CRM.CustomControls.ChatMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CRM.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="1600"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid Row="0">
            <Label Content="{Binding Path=Message.Sender.LastName}"></Label>
        </Grid>
        
        <Grid Background="Aqua" Row="1">
            <Label Content="{Binding Path=Message.Message}"></Label>
        </Grid>
        
    </Grid>
</UserControl>
